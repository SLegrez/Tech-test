<h2>Inscription</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
      <%= f.label "Nom de l'association" %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "nom" %>
  </div>

  <div class="field">
      <%= f.label "Identifiant officiel" %><br />
      <%= f.text_field :identifiant, autofocus: true, autocomplete: "nom" %>
  </div>

  <div class="field">
    <%= f.label "Votre adresse email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "Mot de passe" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "Confirmation du mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Inscription" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
